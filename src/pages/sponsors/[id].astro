            <div class="flex flex-col md:flex-row gap-8 items-center md:center">
              <div class="w-48 flex items-center justify-center overflow-hidden flex-shrink-0 px-4 py-3">
                <img src={sponsor.logo} alt={sponsor.name} class="max-w-full h-auto object-contain" />
              </div>
              <div class="flex-1 text-center md:text-left space-y-3">
                <div class="text-sm text-teal-700 font-semibold">{sponsor.tier}</div>
                <h1 class="text-4xl text-gray-900">{sponsor.name}</h1>
                <div class="flex flex-wrap gap-4 justify-center md:justify-start text-sm text-gray-700">
                  {sponsor.location && (
                    <div class="flex items-center gap-2">
                      <MapPin className="w-4 h-4" aria-hidden="true" />
                      <span>{sponsor.location}</span>
                    </div>
                  )}
                  {sponsor.employees && (
                    <div class="flex items-center gap-2">
                      <Users className="w-4 h-4" aria-hidden="true" />
                      <span>{sponsor.employees}</span>
                    </div>
                  )}
                  {sponsor.website && (
                    <a
                      href={sponsor.website}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="flex items-center gap-2 text-teal-700 hover:text-teal-800"
                    >
                      <Globe className="w-4 h-4" aria-hidden="true" />
                      <span>Webサイト</span>
                    </a>
                  )}
                </div>
              </div>
            </div>
          </section>

          <section class="bg-white rounded-2xl p-8 shadow-lg border border-gray-200">
            <div class="flex items-center gap-3 mb-6">
              <Briefcase className="w-6 h-6 text-teal-700" aria-hidden="true" />
              <h2 class="text-2xl text-gray-900">概要</h2>
            </div>
            <ul class="space-y-2 text-gray-700">
              {sponsor.business.map((item) => (
                <li class="text-gray-700 leading-relaxed">
                  {item}
                </li>
              ))}
            </ul>
          </section>

          <section class="rounded-2xl p-8 text-center">
            <a
              href="/#sponsors"
              class="inline-flex items-center justify-center gap-2 bg-teal-700 text-white px-6 py-3 rounded-full hover:bg-teal-800 transition-colors shadow-lg"
            >
              <ArrowLeft className="w-5 h-5" aria-hidden="true" />
              <span>スポンサー一覧に戻る</span>
            </a>
          </section>
        </div>
      </main>
    </div>
  )}
</Layout>
